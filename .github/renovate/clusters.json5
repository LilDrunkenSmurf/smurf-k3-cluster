{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for teyvat cluster",
      "matchFileNames": [
        "**/kubernetes/teyvat/**",
        "**/ansible/teyvat/**",
        "**/terraform/teyvat/**"
      ],
      "additionalBranchPrefix": "teyvat-"
    },
    {
      "description": "Separate PRs for pi cluster",
      "matchFileNames": [
        "**/kubernetes/pi/**",
        "**/ansible/pi/**",
        "**/terraform/pi/**"
      ],
      "additionalBranchPrefix": "pi-"
    }
  ]
}
